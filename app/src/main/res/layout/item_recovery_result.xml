<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/recoveryName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recovery Name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#FF6200EE"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/recoveryStars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="â­ 123"
                android:textSize="14sp"
                android:textColor="#FFB300"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Type and Source Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/recoveryType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TWRP"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#4CAF50"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/recoverySource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GitHub"
                android:textSize="12sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/recoveryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recovery description goes here..."
            android:textSize="14sp"
            android:textColor="#444444"
            android:maxLines="3"
            android:ellipsize="end"
            android:paddingBottom="12dp" />

        <!-- Open Button -->
        <Button
            android:id="@+id/openButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“¥ View / Download"
            android:textStyle="bold"
            android:backgroundTint="#FF6200EE"
            android:textColor="#FFFFFF"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
